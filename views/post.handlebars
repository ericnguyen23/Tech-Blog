<div class="box">
  <div class="text-center">
    <h2 class="is-size-4">{{title}}</h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p class="mt-5">{{body}}</p>
  </div>

  <hr />

  <form class="form comment-form mt-5">
    <div>
      <label for="project-desc">Comment:</label>
      <textarea class="form-input textarea" id="comment" name="comment"></textarea>
    </div>
    <div class="mt-5">
      <button type="submit" class="button is-info">Submit</button>
    </div>
  </form>

  <hr />
  <h1 class="is-size-5 mt-5">All Comments:</h1>
  {{#each filteredComments as |comment|}}
  <p>"{{comment.comment}}"</p>
  {{/each}}

</div>

<script src="/js/comment.js"></script>
