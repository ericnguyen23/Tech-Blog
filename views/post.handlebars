<div class="box">
  <div class="text-center">
    <h2 class="is-size-4">{{title}}</h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p class="mt-5">{{body}}</p>
  </div>

  <form class="form comment-form mt-5">
    <div class="form-group">
      <label for="project-desc">Comment:</label>
      <textarea class="form-input" id="comment" name="comment"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>

</div>

<script src="/js/comment.js"></script>
