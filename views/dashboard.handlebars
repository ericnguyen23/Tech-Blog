<div class="box">
{{name}}'s Dashboard

<h1 class="is-size-3">Create a Blog Post:</h1>

<form class="form new-blog-form">
  <div class="form-group">
    <label for="project-name">Blog Title:</label>
    <input class="input" type="text" id="blog-title" name="blog-title" />
  </div>
  <div class="form-group">
    <label for="project-desc">Body:</label>
    <textarea class="textarea" id="blog-body" name="blog-body"></textarea>
  </div>
  <div class="form-group mt-5">
    <button type="submit" class="button is-info">Create</button>
  </div>
</form>

<h1 class="is-size-3 mt-5">My Posts:</h1>
{{#each blogposts as |post| }}
<div class="card mt-4">
  <header class="card-header">
    <div class="p-5">
      <h1 class="is-size-4">{{post.title}}</h1>
      <p>By: {{post.user.name}}</p>
      <p>Created on: {{format_date post.date_created}}</p>
    </div>

    <button class="card-header-icon" aria-label="more options">
      <span class="icon">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </button>
  </header>
  <div class="card-content">
    <div class="content">
      {{post.body}}
    </div>
  </div>
  {{!-- <footer class="card-footer">
    <a href="#" class="card-footer-item">Save</a>
    <a href="#" class="card-footer-item">Edit</a>
    <a href="#" class="card-footer-item">Delete</a>
  </footer> --}}
</div>
{{/each}}

</div>

<script src="./js/createblog.js"></script>